# CrossLogic AI IaaS - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=crosslogic
DB_PASSWORD=your_secure_password_here
DB_NAME=crosslogic_iaas
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# ============================================================================
# BILLING CONFIGURATION
# ============================================================================
BILLING_ENABLED=true
# Set to false to disable Stripe-dependent billing paths for local development
# (token accounting still runs for observability and internal costing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
BILLING_AGGREGATION_INTERVAL=1h
BILLING_EXPORT_INTERVAL=5m

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
API_KEY_HASH_ROUNDS=12
JWT_SECRET=your_jwt_secret_here
TLS_ENABLED=false
TLS_CERT_PATH=
TLS_KEY_PATH=

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
MONITORING_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics
LOG_LEVEL=info

# ============================================================================
# NODE AGENT CONFIGURATION
# ============================================================================
CONTROL_PLANE_URL=http://localhost:8080
NODE_ID=
PROVIDER=aws
REGION=us-east-1
MODEL_NAME=llama-3-8b
VLLM_ENDPOINT=http://localhost:8000
GPU_TYPE=A10G
INSTANCE_TYPE=g5.xlarge
SPOT_INSTANCE=true
