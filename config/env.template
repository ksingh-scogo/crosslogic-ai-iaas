# CrossLogic AI IaaS - Minimal Configuration Template
# Copy this to .env in root directory and fill in your values
# cp config/env.template .env

# ========== REQUIRED ==========

# Security (Generate with: openssl rand -hex 32)
DB_PASSWORD=
ADMIN_API_TOKEN=
JWT_SECRET=

# Cloudflare R2
R2_ENDPOINT=
R2_BUCKET=crosslogic-models
R2_ACCESS_KEY=
R2_SECRET_KEY=

# HuggingFace
HUGGINGFACE_TOKEN=

# Cloud Provider (Choose at least one)
# AWS:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Azure:
# AZURE_SUBSCRIPTION_ID=
# AZURE_TENANT_ID=

# GCP:
# GCP_PROJECT_ID=

# ========== OPTIONAL ==========

# Billing (set to false for dev/test)
BILLING_ENABLED=false
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Monitoring
LOG_LEVEL=info

# Grafana
GRAFANA_PASSWORD=admin

# ========== SKYPILOT CONFIGURATION ==========

# SkyPilot API Server Mode (set to true to use API Server instead of CLI)
SKYPILOT_USE_API_SERVER=false

# SkyPilot API Server Configuration (required when SKYPILOT_USE_API_SERVER=true)
# SKYPILOT_API_SERVER_URL=https://skypilot-api.example.com
# SKYPILOT_SERVICE_ACCOUNT_TOKEN=
# SKYPILOT_CREDENTIAL_ENCRYPTION_KEY=  # Generate with: openssl rand -hex 32

# SkyPilot Timeouts (optional, defaults shown)
# SKYPILOT_LAUNCH_TIMEOUT=10m
# SKYPILOT_TERMINATE_TIMEOUT=5m
# SKYPILOT_STATUS_TIMEOUT=30s

# SkyPilot Retry Configuration (optional, defaults shown)
# SKYPILOT_MAX_RETRIES=3
# SKYPILOT_RETRY_BACKOFF=5s


